.header
  =render 'header'
.contents_show
  .contents_show__tweet
    = @tweet.text
  = form_with(model: @comment, url: tweet_comments_path(@tweet), method: :post, local: true) do |f|
    .contents_show__comment
      .comment_text
        = f.text_area :text
      .comment_submit-btn
        = f.submit "コメントする"
  .contents_show__comments
    .contents_show__comments__title
      ＜コメント一覧＞
      